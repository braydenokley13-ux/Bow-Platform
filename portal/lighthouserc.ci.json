{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:3000/login",
        "http://127.0.0.1:3000/dashboard",
        "http://127.0.0.1:3000/admin/overview",
        "http://127.0.0.1:3000/admin/curriculum",
        "http://127.0.0.1:3000/records"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2500
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1
          }
        ],
        "total-blocking-time": [
          "error",
          {
            "maxNumericValue": 200
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:performance": [
          "warn",
          {
            "minScore": 0.85
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
